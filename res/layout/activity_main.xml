<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sunny.example.openvolley.MainActivity" >

    <Button
        android:id="@+id/volley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="httpRequest" />
    <Button
        android:id="@+id/json"
        android:layout_below="@+id/volley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="json" />
    <Button
        android:id="@+id/image"
        android:layout_below="@+id/json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imagerequest" />
    <Button
        android:id="@+id/imageloader"
        android:layout_below="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imageloader" />
    <Button
        android:id="@+id/netWorkimageView"
        android:layout_below="@+id/imageloader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NetworkImageView" />
    
    <ScrollView
        android:layout_below="@+id/netWorkimageView"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
    
    <TextView
        android:id="@+id/tv" 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"/>"
</ScrollView>
</RelativeLayout>
